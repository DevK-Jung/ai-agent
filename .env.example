# =============================================================================
# AI Agent RAG System - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in the actual values
# DO NOT commit .env file to version control

# =============================================================================
# API Keys (Required)
# =============================================================================
# OpenAI API key - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# LlamaCloud API key - Get from https://cloud.llamaindex.ai/
LLAMA_CLOUD_API_KEY=llx-your-llamacloud-api-key-here

# HuggingFace token for speaker diarization - Get from https://huggingface.co/settings/tokens
HF_TOKEN=hf_your-huggingface-token-here

# =============================================================================
# Server Configuration
# =============================================================================
PORT=8888
HOST=0.0.0.0

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_EXTERNAL_PORT=5433
POSTGRES_INTERNAL_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ai_agent
POSTGRES_HOST=localhost

# Database Connection Pool Configuration
DB_POOL_SIZE=10
DB_POOL_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=true

# =============================================================================
# File Upload Configuration
# =============================================================================
ALLOWED_FILE_TYPES=text/plain,application/pdf,application/vnd.openxmlformats-officedocument.wordprocessingml.document
MAX_FILE_SIZE_MB=10
UPLOAD_DIR=data/uploads

# =============================================================================
# Text Processing Configuration
# =============================================================================
# Text Chunking
CHUNK_SIZE=1000
CHUNK_OVERLAP=100
CHUNK_SEPARATORS="\n\n,\n,., ,"

# Embedding Model
EMBEDDING_MODEL=BAAI/bge-m3
EMBEDDING_DIMENSIONS=1024

# =============================================================================
# AI Model Configuration
# =============================================================================
# Chat Agent Models
CLASSIFIER_MODEL=gpt-4o-mini
CLASSIFIER_TEMPERATURE=0.1
GENERATOR_MODEL=gpt-4o
GENERATOR_TEMPERATURE=0.7
CONVERSATION_SUMMARY_MODEL=gpt-4o-mini
CONVERSATION_SUMMARY_TEMPERATURE=0.1

# Meeting Agent Models
MINUTES_MODEL=gpt-4o
MINUTES_TEMPERATURE=0.3

# =============================================================================
# WhisperX Configuration (Audio Transcription)
# =============================================================================
# Model size: tiny, base, small, medium, large-v1, large-v2, large-v3
WHISPERX_MODEL=large-v2

# Device: "cpu" or "cuda" (if GPU available)
WHISPERX_DEVICE=cpu

# Language code: "ko" (Korean), "en" (English), "auto" (auto-detect)
WHISPERX_LANGUAGE=ko

# Processing parameters
WHISPERX_BATCH_SIZE=16
WHISPERX_SAMPLE_RATE=16000

# Audio length limits (in minutes)
WHISPERX_MAX_DURATION_MINUTES=120           # Maximum 2 hours
WHISPERX_LONG_AUDIO_THRESHOLD_MINUTES=30    # Chunk processing threshold
WHISPERX_CHUNK_DURATION_MINUTES=10          # Chunk size for long audio

# =============================================================================
# Database Checkpointer Configuration
# =============================================================================
CHECKPOINTER_SCHEMA=public
CHECKPOINTER_APP_NAME=ai-agent-checkpointer
CHECKPOINTER_CONNECT_TIMEOUT=10
CHECKPOINTER_STATEMENT_TIMEOUT=30000
CHECKPOINTER_TTL_SECONDS=3600

# =============================================================================
# Application Configuration
# =============================================================================
# Environment: "development" or "production"
ENVIRONMENT=development

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# Setup Instructions:
# =============================================================================
# 1. Copy this file to .env: cp .env.example .env
# 2. Fill in your actual API keys and configuration values
# 3. For local development, you can use the default database settings
# 4. For production, update database credentials and use stronger passwords
# 5. Make sure to add .env to your .gitignore file
# =============================================================================